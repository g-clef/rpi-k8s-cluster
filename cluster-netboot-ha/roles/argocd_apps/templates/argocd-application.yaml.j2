apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ item.name }}
  namespace: argocd
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  project: default
  source:
    repoURL: {{ item.repo_url }}
    targetRevision: {{ item.branch | default('main') }}
    path: {{ item.path | default('.') }}
    {% if item.helm is defined %}
    helm:
      {% if item.helm.values_file is defined %}
      valueFiles:
        - {{ item.helm.values_file }}
      {% endif %}
      {% if item.helm.values is defined %}
      values: |
{{ item.helm.values | indent(8, true) }}
      {% endif %}
    {% endif %}
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ item.namespace | default('default') }}
  syncPolicy:
    automated:
      prune: {{ item.auto_prune | default(true) }}
      selfHeal: {{ item.auto_sync | default(true) }}
      allowEmpty: false
    syncOptions:
      - Validate=false
      - CreateNamespace={{ item.create_namespace | default(true) }}
      - PrunePropagationPolicy=foreground
      - PruneLast=true
    retry:
      limit: 5
      backoff:
        duration: 5s
        factor: 2
        maxDuration: 3m
