---
# Copy this file to secrets.yaml and fill in your actual values
# secrets.yaml is in .gitignore and will not be committed

# Cluster Security
cluster_token: "CHANGE_ME_TO_A_RANDOM_LONG_STRING_64_CHARS_MIN"

# MinIO Configuration
minio_root_user: "admin"
minio_root_password: "your-secure-minio-password-here"

# ArgoCD Configuration  
argocd_admin_password: "your-secure-argocd-password"

# GitHub Integration (for private repos)
github_username: "your-github-username"
github_token: "ghp_your_github_personal_access_token_here"

# Docker Registry (if using private images)
docker_registry_secret:
  url: "https://index.docker.io/v1/"
  username: "your-docker-username"
  password: "your-docker-password-or-token"

# Ray Configuration (optional password for Redis)
ray_redis_password: "your-ray-redis-password"

# NFS/NAS Configuration (if different from defaults)
# nas_admin_user: "admin"
# nas_admin_password: "your-nas-password"
